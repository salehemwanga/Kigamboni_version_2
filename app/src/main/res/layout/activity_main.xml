<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e9e7e7"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/footer123"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/layout_gradient"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnHome"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/home"
                    android:scaleType="fitXY"
                    android:id="@+id/imageHome"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Home"
                    android:textColor="#000000"
                    android:id="@+id/home"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnSituation"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/camera24"
                    android:scaleType="fitXY"
                    android:id="@+id/imageButton"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Situation"
                    android:textColor="#000000"
                    android:id="@+id/situation"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnNews"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ftraffic"
                    android:scaleType="fitXY"
                    android:id="@+id/news"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="News"
                    android:id="@+id/newsText"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/btnPayment"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/fpayment"
                    android:scaleType="fitXY"
                    android:id="@+id/payment"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Payment"
                    android:textColor="#000000"
                    android:id="@+id/paymentText"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

<!--        <ScrollView
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="fill_parent">-->

        <TextView
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:text="hello"
            android:id="@+id/tvmain"
            android:layout_height="fill_parent" />
        <TextView
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:text="hello"
            android:id="@+id/tvsituation"
            android:layout_height="fill_parent" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/main_container"
                android:layout_marginTop="2dp"></RelativeLayout>

       <!-- </ScrollView>-->


    </LinearLayout>

</RelativeLayout>
